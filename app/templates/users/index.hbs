<div class="container mb-3">

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center my-3">
    <h3>Users</h3>
    <div>
      <button type="button" name="button" class="btn btn-primary" {{action "cancel"}} data-toggle="modal" data-target="#newUser">+ User</button>
    </div>
  </div>

  <form {{action "queryChanged" on="submit"}}>
    <div class="form-inline mb-1">
      <div class="form-group mb-1 mr-1">
        {{input
          type="text"
          value=name_cont
          class="form-control form-control-sm"
          placeholder="User Name"
        }}
      </div>
      <div class="form-group mb-1 mr-1 xs-input">
        {{#power-select
          searchEnabled=false
          renderInPlace=true
          allowClear=true
          options=roles
          selected=role_eq
          onChange=(action (mut role_eq))
          placeholder="Filter by role"
          as |rol|}}
          {{humanize rol}}
        {{/power-select}}
      </div>
      <div class="form-group mb-1 mr-1">
        <button type="submit" class="btn btn-sm btn-primary btn-block">{{fa-icon "search"}}</button>
      </div>
      <div class="form-group mb-1 mr-auto">
        <button {{action "clear"}} class="btn btn-sm btn-danger btn-block">{{fa-icon "times"}}</button>
      </div>
    </div>
  </form>

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
    {{!-- {{format-numeral model.content.meta.total-count}} result(s)
    {{page-numbers content=model}} --}}
  </div>

  <div class="table-responsive">
    <table class="table table-hover table-striped table-sm">
      <thead>
        <tr class="text-nowrap">
          <th>Created At</th>
          <th>Last Sign In At</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Confirmed?</th>
          <th>Phone Verified?</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
          <tr>
            <td>{{moment-format user.created_at "DD MMM YYYY LT" allowEmpty=true}}</td>
            <td>{{moment-format user.last_sign_in_at "DD MMM YYYY LT" allowEmpty=true}}</td>
            <td>
              {{user.name}}
            </td>
            <td>{{user.email}}</td>
            <td>{{humanize user.role}}</td>
            <td>{{if user.confirmed_at "Yes" "No"}}</td>
            <td>{{if user.phone_verified_at "Yes" "No"}}</td>
            {{!-- <td class="text-{{dasherize user.status}}"><span class="badge badge-{{dasherize user.status}}">{{humanize user.status}}</span></td> --}}
            <td>
              {{#link-to "users.show" user.id}}{{fa-icon "info-circle" size="md"}}{{/link-to}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>

{{outlet}}

<div class="modal fade" id="newUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form {{action "queryChanged" on="submit"}}>
          <div class="form-group form-group-custom sm-input">
            <label>* Name</label>
            {{input
              value=name
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>* Email</label>
            {{input
              value=email
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>* Password</label>
            {{!-- {{input
              type="password"
              value=companyName
              class="form-control"
            }} --}}
            {{password-toggle password=password}}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>* Role</label>
            {{#power-select
              searchEnabled=false
              renderInPlace=true
              options=roles
              selected=role
              placeholder="Select role"
              onChange=(action (mut role)) as |rol|}}
              {{humanize rol}}
            {{/power-select}}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>* Company Name</label>
            {{input
              value=companyName
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>Phone No</label>
            {{input
              value=phoneNo
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>Address</label>
            {{textarea
              value=address
              rows="4"
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>City</label>
            {{input
              value=city
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>State</label>
            {{input
              value=state
              class="form-control"
            }}
          </div>
          <div class="form-group form-group-custom sm-input">
            <label>Postcode</label>
            {{input
              value=postcode
              class="form-control"
            }}
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{#if processing}}
          <button type="button" class="btn btn-success" disabled=disabled>Processing..</button>
        {{else}}
          <button type="button" class="btn btn-success" {{action "create"}}>Create</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div id="modal-category-edit" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Amend Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-sm-12 form-group form-group-custom text-right">
              <button class="btn btn-primary dropdown-toggle mr-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                {{#each selectedCategory.status_events as |event|}}
                  {{#if (or (eq event "activate") (eq event "deactivate"))}}
                    <button class="dropdown-item" type="button" {{action "execStatusEvent" event}}>{{humanize event}}</button>
                  {{/if}}
                {{else}}
                  <a class="dropdown-item disabled" href="#">No further actions</a>
                {{/each}}
              </div>
            </div>
            <div class="col-sm-12 form-group form-group-custom">
              <label>Name</label>
              {{input
                value=selectedCategory.name
                class="form-control form-control-custom"
              }}
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        {{#if processing}}
          <button type="button" class="btn btn-success" disabled>Processing..</button>
        {{else}}
          <button type="button" class="btn btn-success" {{action "edit"}}>Confirm</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
