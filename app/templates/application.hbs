{{!-- app/templates/application.hbs --}}
<div class="menu">
  {{#if session.isAuthenticated}}
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
      <a class="navbar-brand" href="/">Zulend</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            {{#link-to "users" class="nav-link"}}Users{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to "products" class="nav-link"}}Products{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to "categories" class="nav-link"}}Categories{{/link-to}}
          </li>
          <li class="nav-item">
            {{#link-to "promotions" class="nav-link"}}Promotions{{/link-to}}
          </li>
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{application.currentUser.name}} ({{titleize (humanize application.currentUser.role)}})
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="#" {{action "invalidateSession"}}>Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  {{else}}
    {{!-- {{#link-to 'login'}}Login{{/link-to}} --}}
  {{/if}}
</div>
<div class="main">
  {{outlet}}
</div>

{{notification-container position="bottom-right"}}
